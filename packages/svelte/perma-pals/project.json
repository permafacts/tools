{
  "name": "svelte-perma-pals",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/svelte/perma-pals/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/svelte/perma-pals/**/*.{ts,svelte,spec.ts}"
        ]
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "svelte-check",
        "cwd": "packages/svelte/perma-pals"
      }
    },
    "build": {
      "executor": "@nxext/vite:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "entryFile": "src/index.ts",
        "frameworkConfigFile": "@nxext/svelte/plugins/vite",
        "outputPath": "dist/packages/svelte/perma-pals",
        "assets": [
          {
            "glob": "/*",
            "input": "./public/**",
            "output": "./"
          }
        ],
        "tsConfig": "packages/svelte/perma-pals/tsconfig.lib.json"
      },
      "configurations": {
        "production": {}
      }
    },
    "test": {
      "executor": "@nxext/vitest:vitest",
      "options": {
        "vitestConfig": "packages/svelte/perma-pals/vitest.config.ts"
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/svelte",
        "port": 4400,
        "config": {
          "configFolder": "packages/svelte/perma-pals/.storybook"
        },
        "projectBuildConfig": "svelte-perma-pals:build-storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/svelte",
        "outputPath": "dist/storybook/svelte-perma-pals",
        "config": {
          "configFolder": "packages/svelte/perma-pals/.storybook"
        },
        "projectBuildConfig": "svelte-perma-pals:build-storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
